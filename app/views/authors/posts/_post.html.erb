<tr>
  <td><%= link_to  post.title, authors_post_path(post) %></td>
  <td></td>
  <% if post.published? %>
    <td><%= link_to 'Unpublish', unpublish_authors_post_path(post), method: :put, class: 'btn btn-sm bt-primary' %></td>
  <% else %>
    <td><%= link_to 'Publish', publish_authors_post_path(post), method: :put, class: 'btn btn-sm bt-success' %></td>
  <% end %>
  <td><%= link_to 'Edit', edit_authors_post_path(post), class: 'btn btn-sm bt-warning' %></td>
  <td><%= link_to 'Remove', authors_post_path(post), method: :delete, data: { confirm: 'Are you shure?' }, class: 'btn btn-sm bt-danger' %></td>
  
</tr>